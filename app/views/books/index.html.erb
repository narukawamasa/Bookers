<div>
  <%= flash[:notice] %>
</div>
<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <span>
            <%= link_to 'Show', "/books/#{book.id}" %>
          </span>
          <span>
            <%= link_to 'Edit', "/books/#{book.id}/edit" %>
          </span>
          <span>
            <%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
          </span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>


<h2>New book</h2>
<div>
  <% if @book.errors.any? %>
  <h4>
    <%= @book.errors.count %>errors prohibited this book from being saved:
  </h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
</div>
<%= form_with model: @book do |f| %>
  <div>
    <label>Title</label>
      <%= f.text_field :title %>
  </div>
  <div>
    <label>Body</label>
      <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>